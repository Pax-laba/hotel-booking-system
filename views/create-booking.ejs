<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Создание бронирования</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }
        header.tm-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            padding: 20px;
            color: white;
        }
        .tm-logo {
            width: 120px;
            height: auto;
        }
        .tm-nav ul {
            display: flex;
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
        .tm-nav ul li {
            margin: 0 15px;
        }
        .tm-nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 18px;
        }
        .tm-nav ul li a:hover {
            text-decoration: underline;
        }
        .create-booking {
            padding: 40px 20px;
            max-width: 800px;
            margin: 0 auto;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .create-booking h2 {
            font-size: 24px;
            margin-bottom: 30px;
        }
        .cottage-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }
        .cottage-grid .cottage {
            cursor: pointer;
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            transition: transform 0.3s;
            border: 2px solid transparent;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .cottage-grid .cottage.selected {
            border-color: #007BFF;
            box-shadow: 0 0 15px rgba(0, 123, 255, 0.5);
            filter: brightness(50%);
        }
        .cottage-grid .cottage img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .cottage-grid .cottage:hover {
            transform: scale(1.05);
        }
        .cottage-grid .cottage .name {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 10px;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            font-size: 18px;
            text-align: center;
        }
        .cottage-grid .cottage .price {
            position: absolute;
            top: 0;
            left: 0;
            padding: 10px;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            font-size: 18px;
            text-align: center;
            display: none;
        }
        .cottage-grid .cottage:hover .price {
            display: block;
        }
        select, input {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
            width: 60%;
        }
        button {
            padding: 12px 20px;
            font-size: 18px;
            color: white;
            background-color: #007BFF;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #0056b3;
        }
        footer.tm-footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        .tm-roomimage {
            transition: filter 0.3s ease;
        }
        .tm-roomimage.darker {
            filter: brightness(50%);
        }
    </style>
</head>
<body>
    <header class="tm-header">
        <img class="tm-logo" src="images/bear-icon-logo-design-illustration_586739-592.avif" width="120px" height="auto" alt="Majestic Hotel Resort">
        <nav class="tm-nav">
            <ul>
                <li><a href="/client-dashboard">Главная</a></li>
                <li><a href="/logout">Выйти</a></li>
            </ul>
        </nav>
    </header>

    <section class="create-booking">
        <h2>Создание нового бронирования</h2>
        <form action="/create-booking" method="POST">
            <h1>Выберите коттедж:</h1>
            <div class="cottage-grid">
                <div class="cottage" data-room-id="1" data-price="15000" onclick="selectCottage(this)">
                    <img class="tm-roomimage" src="images/AAA_0136.jpg" alt="Мишутка">
                    <div class="name">Мишутка</div>
                    <div class="price">15 000р</div>
                </div>
                <div class="cottage" data-room-id="2" data-price="10000" onclick="selectCottage(this)">
                    <img class="tm-roomimage" src="images/pokraska-derevyannogo-doma-02.jpg" alt="Маша Медведь">
                    <div class="name">Маша Медведь</div>
                    <div class="price">10 000р</div>
                </div>
                <div class="cottage" data-room-id="3" data-price="10000" onclick="selectCottage(this)">
                    <img class="tm-roomimage" src="images/4.jpg" alt="Мечта">
                    <div class="name">Мечта</div>
                    <div class="price">10 000р</div>
                </div>
                <div class="cottage" data-room-id="4" data-price="30000" onclick="selectCottage(this)">
                    <img class="tm-roomimage" src="images/AAA_9648.jpg" alt="Иван да Марья">
                    <div class="name">Иван да Марья</div>
                    <div class="price">30 000р</div>
                </div>
                <div class="cottage" data-room-id="5" data-price="10000" onclick="selectCottage(this)">
                    <img class="tm-roomimage" src="images/AAA_57888.jpg" alt="Теремок">
                    <div class="name">Теремок</div>
                    <div class="price">10 000р</div>
                </div>
                <div class="cottage" data-room-id="6" data-price="10000" onclick="selectCottage(this)">
                    <img class="tm-roomimage" src="images/9485645-dereviannyi-dom-vnutri-otdelka-1.jpg" alt="Домовенок">
                    <div class="name">Домовенок</div>
                    <div class="price">10 000р</div>
                </div>
            </div>

            <input type="hidden" id="room_id" name="room_id" required>
            <input type="hidden" id="price" name="price" required>

            <h2>Цена за сутки: <span id="pricePerDay">0</span> руб.</h2>

            <h2>Дата приезда:</h2>
            <input type="text" id="start_date" name="start_date" required>

            <h2>Дата отъезда:</h2>
            <input type="text" id="end_date" name="end_date" required>

            <div><h2></h2></div>
            <div><button type="submit">Забронировать</button></div>
        </form>
    </section>

    <footer class="tm-footer"></footer>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        let unavailableDates = [];

        function selectCottage(element) {
            const cottages = document.querySelectorAll('.cottage');
            cottages.forEach(cottage => cottage.classList.remove('selected'));
            element.classList.add('selected');
            const roomId = element.getAttribute('data-room-id');
            const price = element.getAttribute('data-price');
            document.getElementById('room_id').value = roomId;
            document.getElementById('price').value = price;
            document.getElementById('pricePerDay').innerText = price;
            fetch(`/get-unavailable-dates?room_id=${roomId}`)
                .then(response => response.json())
                .then(data => {
                    unavailableDates = data.unavailableDates;
                    initializeCalendar();
                })
                .catch(error => console.error('Ошибка при получении занятых дат:', error));
        }

        function initializeCalendar() {
            flatpickr("#start_date", {
                disable: unavailableDates,
                dateFormat: "Y-m-d",
                minDate: "today"
            });
            flatpickr("#end_date", {
                disable: unavailableDates,
                dateFormat: "Y-m-d",
                minDate: "today"
            });
        }

        window.onload = function() {
            initializeCalendar();
        };
    </script>
</body>
</html>